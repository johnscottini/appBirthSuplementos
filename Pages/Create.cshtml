@page
@model lojaSuplementosAppWeb.Pages.CreateModel;

<div class="row pt-5">
    <div class="col-md-4">
        <form method="post">
            <h4>Inclusão de Suplemento</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Supplement.Name" class="control-label"></label>
                <input asp-for="Supplement.Name" class="form-control" />
                <span asp-validation-for="Supplement.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Supplement.Description" class="control-label"></label>
                <input asp-for="Supplement.Description" class="form-control" />
                <span asp-validation-for="Supplement.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Supplement.ImageUri" class="control-label"></label>
                <input asp-for="Supplement.ImageUri" class="form-control" />
                <span asp-validation-for="Supplement.ImageUri" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Supplement.Value" class="control-label"></label>
                <input asp-for="Supplement.Value" class="form-control" />
                <span asp-validation-for="Supplement.Value" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 mb-3">
                <input class="form-check-input" asp-for="Supplement.HasGluten" />
                <label asp-for="Supplement.HasGluten" style="margin-left: 15px"></label>
            </div>

            <div class="form-group mt-3 mb-3">
                <label asp-for="Supplement.BrandId" class="control-label"></label>
                <select class="form-select" asp-for="Supplement.BrandId"
                        asp-items="Model.BrandOptionitens">
                    <option value="">Selecione uma opção</option>
                </select>
                <span asp-validation-for="Supplement.BrandId" class="text-danger">
                </span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}